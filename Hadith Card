import React, { useState, useEffect } from 'react';
import { Card } from "@/components/ui/card";
import { Book, RefreshCw } from 'lucide-react';
import { Button } from "@/components/ui/button";
import { motion, AnimatePresence } from 'framer-motion';

const hadiths = [
  {
    text: "The best among you are those who learn the Quran and teach it.",
    source: "Sahih al-Bukhari",
    narrator: "Uthman ibn Affan (RA)"
  },
  {
    text: "Whoever believes in Allah and the Last Day should speak good or remain silent.",
    source: "Sahih al-Bukhari & Muslim",
    narrator: "Abu Hurairah (RA)"
  },
  {
    text: "None of you truly believes until he loves for his brother what he loves for himself.",
    source: "Sahih al-Bukhari & Muslim",
    narrator: "Anas ibn Malik (RA)"
  },
  {
    text: "The strong man is not one who is good at wrestling, but the strong man is one who controls himself in a fit of rage.",
    source: "Sahih al-Bukhari & Muslim",
    narrator: "Abu Hurairah (RA)"
  },
  {
    text: "Make things easy and do not make them difficult. Give glad tidings and do not repel people.",
    source: "Sahih al-Bukhari",
    narrator: "Anas ibn Malik (RA)"
  },
  {
    text: "The most beloved deeds to Allah are those done consistently, even if they are small.",
    source: "Sahih al-Bukhari & Muslim",
    narrator: "Aisha (RA)"
  },
  {
    text: "Every good deed is charity. To meet your brother with a smiling face is charity.",
    source: "Sunan at-Tirmidhi",
    narrator: "Jabir ibn Abdullah (RA)"
  }
];

export default function HadithCard() {
  const [currentIndex, setCurrentIndex] = useState(0);
  const [isAnimating, setIsAnimating] = useState(false);

  useEffect(() => {
    // Random hadith on load
    setCurrentIndex(Math.floor(Math.random() * hadiths.length));
  }, []);

  const nextHadith = () => {
    setIsAnimating(true);
    setTimeout(() => {
      setCurrentIndex((prev) => (prev + 1) % hadiths.length);
      setIsAnimating(false);
    }, 200);
  };

  const hadith = hadiths[currentIndex];

  return (
    <Card className="overflow-hidden bg-gradient-to-br from-amber-50 to-orange-50 border-amber-200/50 shadow-lg">
      <div className="p-6">
        <div className="flex items-center justify-between mb-4">
          <div className="flex items-center gap-2">
            <div className="w-10 h-10 rounded-xl bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center">
              <Book className="w-5 h-5 text-white" />
            </div>
            <div>
              <h3 className="font-semibold text-amber-900">Hadith of the Day</h3>
              <p className="text-xs text-amber-600">Daily Wisdom</p>
            </div>
          </div>
          <Button
            variant="ghost"
            size="icon"
            onClick={nextHadith}
            className="text-amber-600 hover:text-amber-800 hover:bg-amber-100"
          >
            <RefreshCw className={`w-4 h-4 ${isAnimating ? 'animate-spin' : ''}`} />
          </Button>
        </div>
        
        <AnimatePresence mode="wait">
          <motion.div
            key={currentIndex}
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            exit={{ opacity: 0, y: -10 }}
            transition={{ duration: 0.2 }}
          >
            <blockquote className="relative">
              <span className="absolute -top-2 -left-2 text-6xl text-amber-200 font-serif">"</span>
              <p className="text-amber-900 text-lg leading-relaxed pl-6 pr-4 italic">
                {hadith.text}
              </p>
              <span className="absolute -bottom-4 right-0 text-6xl text-amber-200 font-serif">"</span>
            </blockquote>
            
            <div className="mt-6 pt-4 border-t border-amber-200/50">
              <p className="text-amber-700 text-sm font-medium">{hadith.narrator}</p>
              <p className="text-amber-600 text-xs">{hadith.source}</p>
            </div>
          </motion.div>
        </AnimatePresence>
      </div>
    </Card>
  );
}
